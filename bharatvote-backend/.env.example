# ============================================
# BharatVote Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ============================================

# ---------- Server ----------
PORT=5000
NODE_ENV=development

# ---------- MongoDB Atlas ----------
# Get your connection string from MongoDB Atlas Dashboard
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>
MONGO_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/bharatvote?retryWrites=true&w=majority

# ---------- JWT Authentication ----------
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=1h

# ---------- Hashing (Identity Layer) ----------
# System-wide salt for SHA-256 hashing of Aadhaar, mobile, etc.
# MUST be kept secret â€” changing this invalidates all existing hashes
HASH_SECRET_SALT=your_secret_salt_here_change_in_production

# ---------- Vote Encryption (AES-256) ----------
# Election-level encryption key for vote data
# 32 bytes (256 bits) hex string
VOTE_ENCRYPTION_KEY=your_256_bit_hex_key_here

# ---------- OTP Service ----------
# Twilio / Fast2SMS / any SMS provider
# Set OTP_MOCK=true for development without real SMS
OTP_MOCK=true
OTP_API_KEY=your_otp_api_key_here
OTP_API_URL=https://api.example.com/send-otp

# ---------- Email (Nodemailer) ----------
# For sending vote receipts to voters
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM="BharatVote <noreply@bharatvote.in>"

# ---------- Face Verification ----------
# Set FACE_MATCH_MOCK=true for hackathon demo without real CV model
FACE_MATCH_MOCK=true
FACE_API_URL=http://localhost:5001/api/face-match

# ---------- Frontend URL (CORS) ----------
FRONTEND_URL=http://localhost:5173

# ---------- File Upload ----------
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads

# ---------- Admin Credentials ----------
# Default admin setup (change immediately in production)
ADMIN_EMAIL=admin@bharatvote.in
ADMIN_PASSWORD=admin_password_change_me
